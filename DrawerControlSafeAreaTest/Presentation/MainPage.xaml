<Page x:Class="DrawerControlSafeAreaTest.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:DrawerControlSafeAreaTest.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">

  <utu:DrawerControl x:Name="Drawer" DrawerBackground="Transparent">
    <utu:DrawerControl.Content>
      <Grid Background="Pink">
        <Button Content="Open Drawer" Click="OpenDrawer_Click" HorizontalAlignment="Center"/>
      </Grid>
    </utu:DrawerControl.Content>
  </utu:DrawerControl>
</Page>
